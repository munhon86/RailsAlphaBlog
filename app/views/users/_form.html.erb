<%= render 'shared/errors', obj: @user %>
<%= form_for @user do |f| %>
    
    <div class = "form-group col-sm-8 mt-4">
        <div class="control-label">
             <%= f.label :username %>
        </div>
        
        <div class = "form-details custom-margin">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username:" %>
        </div>
        
       <div class="control-label">
           <%= f.label :email %>
       </div>
       
       <div class = "form-details custom-margin">
           <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
       </div>
       
        <div class="control-label">
             <%= f.label :password %>
        </div>
        
        <div class = "form-details custom-margin">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
       
       <div class = "custom-margin">
           <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-primary btn-lg") %>
       </div>
      
          
       [ <%= link_to "Back to Articles listing", articles_path %> ]
    </div>
    
<% end %>
