<h1 align="center">All Alpha Bloggers</h1>

<div class="inner">
    <%= will_paginate %>
</div>

<% @users.each do |user| %>

    <div class="card mt-3 bg-light w-25 card_center center">
        <div class="center_image mt-3" align="middle">
                <%= link_to gravatar_for(user), user_path(user) %>
        </div>
        
        <div class="card-body">
            <p class="card-text">
                <%= link_to user.username, user_path(user) %>
            </p>
            
            <p class="card-text"> 
                <small>
                    <%= pluralize(user.articles.count, "article") if user.articles %>
                </small>
            </p>
            
            <% if logged_in? && current_user.admin? %>
            <div>
                <%= link_to "Delete this user", user_path(user), method: :delete, 
                                                data: {confirm: "Are you sure you want the user and all their articles?"},
                                                class: "btn btn-xs btn-danger" %>
            <% end %>
            </div>

        </div>

    </div>
    
<% end %>

<div class="center2">
    <%= will_paginate %>
</div>