<% if obj.errors.any? %>

    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="card bg-danger">
                    <div class="card-body">
                        <h2 class="card-title">
                            <%= pluralize(obj.errors.count, "error") %>
                            prohibited this article from being saved:
                        </h2>
                        <div class="card-text">
                            <ul>
                                <% obj.errors.full_messages.each do |message| %>
                                <li>
                                    <%= message %>
                                </li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% end %>
