<%= render 'shared/errors', obj: @article %>

<%= form_for @article do |f| %>
    
    <div class = "form-group col-sm-8">
        <div class="control-label">
             <%= f.label :title %>
        </div>
       
        <div class = "form-details custom-margin">
            <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
        </div>
        
       <div class="control-label">
           <%= f.label :description %>
       </div>
       
       <div class = "form-details custom-margin">
           <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter Description" %>
       </div>
       
        <div class = "row">
            <div class ="col-sm-offset-2 col-sm-8">
                <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %> 
                    <% cb.label(class: "checkbox-inline input_checkbox m-3") { cb.check_box(class: "checkbox") + " " + cb.text.capitalize } %>
                <% end %>
            </div>
       </div>
       
       <div class = "custom-margin">
           <%= f.submit class: "btn btn-primary btn-lg" %>
       </div>
          
       [ <%= link_to "Back to Articles listing", articles_path %> ]
    </div>
    
<% end %>

