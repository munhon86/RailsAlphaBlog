<% if @article.errors.any? %>
    <h2>The following erros prevented the articles from being created:</h2>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
            <li>
                <%= message %>
            </li>
            <% end %>
        </ul>

<% end %>

<%= form_for @article do |f| %>
    
    <div class = "form-group col-sm-8">
        <div class="control-label">
             <%= f.label :title %>
        </div>
       
        <div class = "form-details custom-margin">
            <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
        </div>
        
       <div class="control-label">
           <%= f.label :description %>
       </div>
       
       <div class = "form-details custom-margin">
           <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter Description" %>
       </div>
       
       <div class = "custom-margin">
           <%= f.submit class: "btn btn-primary btn-lg" %>
       </div>
          
       [ <%= link_to "Back to Articles listing", articles_path %> ]
    </div>
    
<% end %>

